@using ChefsNDishes.Models
@model Dish

@{
  ViewData["Title"] = "Chefs 'N Dishes";
}
<div class="row text-center bg-primary p-3 large-white">
  <div class="col-sm-5 text-right active-page"><a href="/" class="text-white">CHEFS</a></div>
  <div class="col-sm-2 text-center">|</div>
  <div class="col-sm-5 text-left"><a href="/dishes" class="text-white">DISHES</a></div>
</div>

<div class="row mt-3">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <div class="card">
      <h3 class="card-header">@Model.Name</h3>
      <div class="card-body">
        <h5 class="card-title">@Model.Description</h5>
        <p class="card-text font-italic">From Chef @ViewBag.Chef.FirstName @ViewBag.Chef.LastName</p>
        <p class="card-text">Calories: @Model.Calories</p>
        <p class="card-text">Tastiness Rating: @Model.Tastiness</p>
        <a href="/deletedish/@Model.Id" class="btn btn-danger float-right">DELETE</a>
      </div>
    </div>
    
  </div>
  <div class="col-sm-3"></div>
</div>